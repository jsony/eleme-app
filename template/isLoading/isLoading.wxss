.loadMore {
  margin-top: 50rpx;
}

.load-wrapper {
  position: relative;
  height: 42px;
  margin: 0 auto;
}

.loadbox {
  animation: scaleY 0.35s infinite 1s;
}

.line {
  position: absolute;
  top: 0;
  z-index: 1;
  width: 48%;
  height: 4px;
  border-radius: 4px;
  background: #3393eb;
}

.line-l {
  left: 2px;
  animation: line-l 0.5s ease-out 0s 1 forwards;
}

.line-r {
  right: 2px;
  animation: line-r 0.5s ease-out 0s 1 forwards;
}

.loadMore .icon-wrap {
  position: relative;
  width: 24px;
  margin: auto;
  height: 18px;
  z-index: 3;
}

.loadbox {
  position: absolute;
  left: 50%;
  bottom: 14px;
  margin-left: -12px;
  width: 24px;
  height: 18px;
  z-index: 3;
}

.loadshadow {
  position: absolute;
  left: 50%;
  bottom: 10px;
  z-index: 2;
  margin-left: -12px;
  width: 24px;
  height: 10px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%/50%;
}

.loadshadow image, .loadbox image {
  width: 100%;
  height: 100%;
}

.loadimg {
  position: absolute;
  left: 50%;
  bottom: 9px;
  z-index: 1;
  margin-left: -12px;
  transform: translate(0, 17px);
}

.loadimg image {
  width: 23px;
  height: 23px
}

.loadimg1 {
  animation: path1 0.7s cubic-bezier(0, 0, 0, 0) infinite 0.4s both;
}

.loadimg2 {
  animation: path2 0.7s cubic-bezier(0, 0, 0, 0) infinite 0.6s both;
}

.loadimg3 {
  animation: path3 0.7s cubic-bezier(0, 0, 0, 0) infinite 0.5s both;
}

.loadimg4 {
  animation: path4 0.7s cubic-bezier(0, 0, 0, 0) infinite 0.8s both;
}

@keyframes scaleY {
  0% {
    transform: scaleY(0.8);
  }

  50% {
    transform: scaleY(1);
  }

  100% {
    transform: scaleY(0.8);
  }
}

@keyframes path1 {
  0% {
    transform: translate(0, 18px);
    opacity: 0;
  }

  5% {
    opacity: 1;
  }

  80% {
    opacity: 1;
  }

  50% {
    transform: translate(18px, -15px) rotate(15deg);
  }

  100% {
    transform: translate(24px, 28px) rotate(40deg);
    opacity: 0;
  }
}

@keyframes path2 {
  0% {
    transform: translate(0, 18px);
    opacity: 0;
  }

  5% {
    opacity: 1;
  }

  80% {
    opacity: 1;
  }

  50% {
    transform: translate(15px, -10px) rotate(45deg);
  }

  100% {
    transform: translate(20px, 20px) rotate(80deg);
    opacity: 0;
  }
}

@keyframes path3 {
  0% {
    transform: translate(0, 18px);
    opacity: 0;
  }

  5% {
    opacity: 1;
  }

  80% {
    opacity: 1;
  }

  50% {
    transform: translate(-25px, -10px) rotate(-40deg);
  }

  100% {
    transform: translate(-30px, 22px) rotate(-70deg);
    opacity: 0;
  }
}

@keyframes path4 {
  0% {
    transform: translate(0, 18px);
    opacity: 0;
  }

  5% {
    opacity: 1;
  }

  80% {
    opacity: 1;
  }

  50% {
    transform: translate(-20px, -12px) rotate(-10deg);
  }

  100% {
    transform: translate(-25px, 12px) rotate(-60deg);
    opacity: 0;
  }
}

@keyframes line-l {
  0% {
    transform: rotate(0deg);
    transform-origin: 0 50%;
  }

  100% {
    transform: rotate(-220deg);
    transform-origin: 0 50%;
  }
}

@keyframes line-r {
  0% {
    transform: rotate(0deg);
    transform-origin: 100% 50%;
  }

  100% {
    transform: rotate(220deg);
    transform-origin: 100% 50%;
  }
}
