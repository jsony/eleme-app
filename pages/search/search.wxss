@import "/template/loading/loading.wxss";
@import "/template/shop-item/shop-item.wxss";

.search {
  height: 100%;
}

.search .search-wrapper {
  position: relative;
  z-index: 2;
  padding: 20rpx 30rpx;
  background: #0085ff;
}

.search .search-wrapper .input-search {
  padding-left: 20rpx;
  height: 70rpx;
  border-radius: 34rpx;
  background: #fff;
  font-size: 28rpx;
}

.search .panel .panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
  padding: 0 30rpx;
  background: #f3f5f7;
}

.search .panel .panel-body {
  padding: 30rpx;
  background: #fff;
}

.search .panel .panel-body .word {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 50rpx;
  height: 60rpx;
  padding: 0 20rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.search .loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.search .results {
}

.search .results .filter-bar {
  position: sticky;
  top: 0;
  z-index: 99;
  height: 80rpx;
  display: flex;
  background: #fff;
}

.search .results .filter-bar .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.search .results .filter-bar .item.current {
  color: #0085ff;
}

.search .results .filter-bar .box {
  position: absolute;
  left: 0;
  top: 80rpx;
  width: 100%;
  height: 600rpx;
  background: #fff;
  z-index: 2;
}

.search .results .filter-bar .box .half {
  width: 50%;
  display: inline-block;
  height: 100%;
}

.search .results .filter-bar .box .half:first-child {
  background: #f3f5f7;
}

.search .results .filter-bar .box .half .cate-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 20rpx;
}

.search .results .filter-bar .box .half .cate-item .name {
  font-size: 24rpx;
}

.search .results .filter-bar .box .half .cate-item .badge {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 40rpx;
  height: 30rpx;
  padding: 0 6rpx;
  border-radius: 15rpx;
  background: #999;
  color: #fff;
  font-size: 24rpx;
}

.search .results .filter-bar .box .half .cate-item .cate-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
  vertical-align: middle;
}

.search .results .filter-bar .box .half .cate-item.current {
  background: #fff;
  color: #0085ff;
}

.box.filter-box {
  overflow: hidden;
}

.box.filter-box .content {
  height: 500rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.box.filter-box .title {
  padding: 20rpx;
}

.box.filter-box .btn-wrapper {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.box.filter-box .btn-wrapper .filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48%;
  height: 70rpx;
  margin: 0 1%;
  border-radius: 4px;
  font-size: 26rpx;
}

.box.filter-box .btn-wrapper .filter-btn.filter-btn-sure {
  background: #56d176;
  color: #fff;
}

.filter-bar .box .radio-group {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.filter-bar .box .radio-group .radio-item {
  position: relative;
  width: 32%;
  height: 70rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 2% 20rpx 0;
  border-radius: 3px;
}

.filter-bar .box .radio-group .radio-item:nth-child(3n) {
  margin-right: 0;
}

.filter-bar .box .radio-group .radio-item .radio {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.filter-bar .box .radio-group .radio-item .value.checked {
  border-color: #42aaff;
  background: #42aaff;
  color: #fff;
}

.filter-bar .box .radio-group .radio-item .value {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #eee;
  border-radius: inherit;
}
.filter-bar .box .back-layer {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 1;
    background: rgba(0,0,0,.4);
    -webkit-backdrop-filter: blur(10px);
}

.foods {
  width: 100%;
  display: flex;
  white-space: nowrap;
}

.foods .food-item {
  position: relative;
  display: inline-block;
  width: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.foods .food-item:last-child {
  margin-right: 0;
}

.foods .food-item .food-avatar {
  width: 160rpx;
  height: 160rpx;
}

.foods .food-item .food-name {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.foods .food-item .food-price {
  color: red;
  font-size: 20rpx;
}
