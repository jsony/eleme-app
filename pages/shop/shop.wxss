@import "/template/loading/loading.wxss";
@import "/template/btn-cart/btn-cart.wxss";
@import "/template/cart/cart.wxss";
@import "/template/spec/spec.wxss";
@import "/template/star-rating/star-rating.wxss";
.shop {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.shop-header {
  background: #0085ff;
  color: #fff;
  height: 190rpx;
}

.shop-header .shop-intro {
  display: flex;
  padding: 10rpx 30rpx;
}

.shop-header .shop-intro .shop-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.shop-header .shop-intro .shop-info {
  flex: 1;
  overflow: hidden;
}

.shop-header .shop-intro .shop-info .name {
  font-size: 32rpx;
  font-weight: 600;
}

.shop-header .shop-intro .shop-info .delivery {
  font-size: 20rpx;
}

.shop-header .shop-intro .shop-info .delivery .delivery-mode {
}

.shop-header .shop-intro .shop-info .delivery .delivery-time {
}

.shop-header .shop-intro .shop-info .promotion {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
  font-size: 22rpx;
}

.shop-header .shop-activities {
  position: relative;
  height: 50rpx;
  padding: 0 30rpx;
  overflow: hidden;
}
.shop-header .shop-activities .num {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
}
.shop-header .shop-activities .swiper {
  height: 50rpx;
  padding-right: 100rpx;
}
.shop-header .shop-activities .swiper-item {
  line-height: 50rpx;
}

.shop-header .act {
  line-height: 50rpx;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-header .shop-activities .icon {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-right: 6rpx;
  border-radius: 4rpx;
  background: red;
  font-size: 22rpx;
}

.shop-tab {
  position: relative;
  display: flex;
  background: #fff;
}

.shop-tab .tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.shop-tab .tab-item text {
  position: relative;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.shop-tab .tab-item text.current {
  border-bottom: 2px solid #0085ff;
}

.shop-body {
  flex: 1;
  display: flex;
  position: relative;
  background: #fff;
}

.loading-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shop-body .swiper {
  width: 100%;
  height: 100%;
}

.shop-body .swiper .swiper-item {
  display: flex;
}

.shop-body .menu {
  width: 160rpx;
  background: #f3f5f9;
}

.shop-body .menu .menu-item {
  display: flex;
  min-height: 110rpx;
  align-items: center;
  padding: 0 14rpx;
  font-size: 24rpx;
}

.shop-body .menu .menu-item.current {
  background: #fff;
  border-left: 6rpx solid #0085ff;
  box-sizing: border-box;
}

.shop-body .menu .menu-item .icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.shop-body .goods {
  flex: 1;
}

.shop-body .goods .goods-item {
  position: relative;
}

.shop-body .goods .goods-item .food {
  position: relative;
  display: flex;
  padding: 20rpx;
}

.shop-body .goods .goods-item .food .icon {
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.shop-body .goods .goods-item .food .content {
  flex: 1;
}

.shop-body .goods .goods-item .food .content .name {
  font-weight: 600;
  font-size: 30rpx;
}

.shop-body .goods .goods-item .food .content .description {
  font-size: 22rpx;
  color: #666;
}

.shop-body .goods .goods-item .food .content .rating {
  font-size: 22rpx;
  color: #666;
}

.shop-body .goods .goods-item .food .content .price {
  font-size: 22rpx;
  color: red;
}

.shop-body .goods .goods-item .food .content .btn-control {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 99;
  min-width: 48rpx;
  min-height: 48rpx;
}

.shop-body .goods .goods-item .food .content .price .cur-price {
  font-weight: 600;
  font-size: 32rpx;
  margin-right: 6rpx;
}

.shop-body .goods .goods-item .food .content .price .old-price {
  text-decoration: line-through;
  color: #999;
}

.shop-body .goods .goods-item .title {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #f3f5f7;
  color: #777;
  padding: 8rpx 6rpx;
  font-size: 24rpx;
}

.shop-footer {
  height: 100rpx;
}

.rating {
  width: 100%;
}

.rating view {
  font-size: 24rpx;
  color: #555;
}

.rating .star_level {
  display: table;
  width: 100%;
  background: #fff;
  padding: 20rpx 0;
}

.rating .star_level .star_level-item {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}

.rating .star_level .star_level-item:first-child {
  border-right: 1px solid #eee;
}

.rating .star_level .star_level-item .value {
  color: #f74342;
}

.rating .star_level .star_level-item .value.star_level_value {
  font-size: 44rpx;
}

.rating .comment-box .comment-body {
  padding: 20rpx 20rpx 0;
}

.rating .comment-box .comment-body .list .item {
  position: relative;
  margin-bottom: 30rpx;
}

.rating .comment-box .comment-body .list .item .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  float: left;
}

.rating .comment-box .comment-body .list .item .content {
  padding: 0 0 20rpx 60rpx;
}

.rating .comment-box .comment-body .list .item .content .username {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.rating .comment-box .comment-body .list .item .content .username .rated-at{
  font-size: 20rpx;
  color: #999;
}

.rating .comment-box .comment-body .list .item .content .rater-wrapper {
  margin-bottom: 10rpx;
}

.rating .comment-box .comment-body .list .item .content .rating-text {
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.rating .comment-box .comment-body .list .item .content .rating-text :after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  border-top: 1px solid #eee;
  content: ' ';
}

@media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2) {
  .rating   .comment-box .comment-body .list .item .content .rating-text :after {
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
  }
}

@media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3) {
  .rating   .comment-box .comment-body .list .item .content .rating-text :after {
    -webkit-transform: scaleY(0.3);
    transform: scaleY(0.3);
  }
}

.rating .comment-box .comment-body .list .item .content .food-rating {
  padding-left: 30rpx;
}

.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list {
  margin-bottom: 20rpx;
}
.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list:last-child {
  margin-bottom: 0;
}

.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list .find-food {
  color: #1e89e0;
}

.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list .food-rating-text {
  color: #999;
}

.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list .reply-text {
  background-color: #f7f7f7;
  padding: 20rpx;
  margin-top: 30rpx;
  position: relative;
  border-radius: 12rpx;
}

.rating .comment-box .comment-body .list .item .content .food-rating .food-rating-list .rating-img img {
  height: 200rpx;
  width: 200rpx;
  margin: 30rpx 30rpx 30rpx 0;
}
.loading {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}